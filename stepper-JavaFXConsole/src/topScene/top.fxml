<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="108.0" prefWidth="600.0" stylesheets="@topStyle.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="topScene.topController">
   <children>
      <HBox fx:id="mostTopBox" alignment="CENTER_LEFT" prefHeight="109.0" prefWidth="600.0" spacing="15.0">
         <children>
            <Button fx:id="LoadXMLButton" mnemonicParsing="false" onAction="#loadStepperFromXml" text="Load XML file" />
            <Label fx:id="currentXMLLabel" prefHeight="30.0" prefWidth="468.0" text="No XML file is currently loaded" wrapText="true" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="15.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="120.0" prefWidth="600.0" spacing="15.0">
         <children>
            <Button fx:id="flowsDefButton" mnemonicParsing="false" text="Flows Definition" />
            <Button fx:id="flowsExecutionButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Flows Execution" />
            <Button fx:id="executionsHistoryButton" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" text="Executions History" />
            <Button fx:id="statisticsButton" layoutX="114.0" layoutY="10.0" mnemonicParsing="false" text="Statistics" />
         </children>
         <padding>
            <Insets right="15.0" />
         </padding>
      </HBox>
   </children>
</VBox>
