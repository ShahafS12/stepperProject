<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<ScrollPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loginScene.loginController">
   <content>
      <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
         <top>
            <Label fx:id="welcomeLabel" text="Welcome To Stepper!" BorderPane.alignment="CENTER">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </Label>
         </top>
         <center>
            <HBox fx:id="midSectionHbox" alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="userNameLabel" text="User Name:" />
                  <TextField fx:id="userNameTextField" maxWidth="100.0" prefWidth="100.0">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </center>
         <bottom>
            <Button fx:id="loginButton" mnemonicParsing="false" text="Login" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
      </BorderPane>
   </content>
</ScrollPane>
